{
  "name": "tslint-auto-disable-fork",
  "version": "0.0.5",
  "description": "A command-line tool to automatically insert disable comments for failing TSLint rules",
  "bin": {
    "tslint-auto-disable-fork": "bin/tslint-auto-disable-fork"
  },
  "repository": "git@github.com:paulkoerbitz/tslint-auto-disable.git",
  "author": "Paul Koerbitz <paul.koerbitz@gmail.com>",
  "license": "MIT",
  "files": [
    "bin/tslint-auto-disable-fork",
    "dist/src/**/*.js"
  ],
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/commander": "^2.12.2",
    "@types/glob": "^5.0.35",
    "@types/lodash": "^4.14.106",
    "@types/minimatch": "^3.0.3",
    "@types/node": "^9.6.0",
    "chai": "^4.1.2",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "lodash": "^4.17.5",
    "prettier": "^1.11.1",
    "ts-node": "^5.0.1"
  },
  "dependencies": {
    "commander": "^2.15.1",
    "glob": "^7.1.2",
    "minimatch": "^3.0.4",
    "tslint": "^6.1.2",
    "typescript": "^3.9.3"
  },
  "scripts": {
    "test": "ts-node test/runner.ts",
    "build": "tsc",
    "prepublishOnly": "npm test && npm run build",
    "precommit": "lint-staged",
    "prettier:fix": "prettier --write \"src/**/*.ts\""
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix -p ./tsconfig.json -c ./tslint.json",
      "prettier --write",
      "git add"
    ]
  }
}
